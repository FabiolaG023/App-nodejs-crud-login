doctype html
html
  head
    meta(charset='utf-8')
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='/favicon.ico')
    title Editar Producto
    link(
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.0/css/bootstrap.min.css"
      integrity="sha256-NJWeQ+bs82iAeoT5Ktmqbi3NXwxcHlfaVejzJI2dklU="
      crossorigin="anonymous")
    link(href='/navbar.css', rel='stylesheet')

  body
    nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
        .container-fluid
          a(class="navbar-brand" href="/tienda/info") info
          button(class="navbar-toggler" type="button" 
              data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" 
              aria-controls="navbarNavAltMarkup" aria-expanded="false" 
              aria-label="Toggle navigation")
            span(class="navbar-toggler-icon")
          div(class="collapse navbar-collapse" id="navbarNavAltMarkup")
            div(class="navbar-nav") 
              a(class="nav-link" href="/tienda/product") Productos
    .modal-dialog
        .modal-content
          // Modal Header
          .modal-header
            h4#myModalLabel.modal-title
              | Editar Producto
          // Modal Body
          .modal-body
            form(action=`/tienda/product/show/${items.id}?_method=PUT`, method="post")
              div.form-group
                label(for='articulo') Articulo:
                textarea#articulo.form-control(placeholder='articulo' name='articulo')=items.articulo
                div.form-group
                label(for='decripcion') Descripcion:
                textarea#descripcion.form-control( placeholder='descripcion' name='descripcion')=items.descripcion
                div.form-group
                label(for='precio') Precio:
                textarea#precio.form-control( placeholder='precio' name='precio')=items.precio
              button.btn.btn-warning(type="submit", value="Guardar") Actualizar
